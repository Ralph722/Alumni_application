rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'user') == 'admin';
    }

    // Events collection - allow read for signed-in, write for admins only
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() &&
        request.resource.data.keys().hasAll(['id', 'theme', 'batchYear', 'date', 'venue', 'status', 'comments']) &&
        request.resource.data.id == eventId;
      allow update, delete: if isAdmin();
    }
    
    // Users collection - allow read/write for own user data
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User subcollections
      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
